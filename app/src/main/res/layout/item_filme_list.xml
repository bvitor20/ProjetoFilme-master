<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:padding="8dp"
    >

    <ImageView
        android:layout_width="70dp"
        android:layout_height="90dp"
        android:src="@mipmap/ic_launcher"
        android:id="@+id/img_capa_item"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Titulo"
        android:id="@+id/txtNome"
        android:layout_alignTop="@+id/img_capa_item"
        android:layout_toRightOf="@+id/img_capa_item"
        android:layout_toEndOf="@+id/img_capa_item"
        android:layout_marginLeft="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Direção"
        android:id="@+id/txtElenco"
        android:layout_below="@+id/txtNome"
        android:layout_toRightOf="@+id/img_capa_item"
        android:layout_toEndOf="@+id/img_capa_item"
        android:layout_marginLeft="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Lançamento"
        android:id="@+id/txtAnoLancamento"
        android:layout_below="@+id/txtElenco"
        android:layout_toRightOf="@+id/img_capa_item"
        android:layout_toEndOf="@+id/img_capa_item"
        android:layout_marginLeft="8dp" />


</RelativeLayout>